<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{ instructors.avatar_url }}">
    </div>
</div>
<div class="item">
    <div>Instrutor</div>
    <div>
        <input type="text" name="name" placeholder="Nome do instrutor" value="{{ instructors.name }}">
    </div>
</div>
<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ instructors.birth }}">
    </div>
</div>
<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input type="radio" name="gender" value="M"
            {% if instructors.gender =='M' %} checked
            {% endif %}}
            >
            Masculino
        </span>
        <span>
            <input type="radio" name="gender" value="F"
            {% if instructors.gender =='F' %} checked
            {% endif %}}
            >
            Feminino
        </span>
    </div>
</div>
<div class="item">
    <div>Área de atuação
    </div>
    <div>
        <input type="text" name="services" placeholder="Separe os serviços prestados por vírgula" value="{{ instructors.services }}">
    </div>
</div>
<button type="submit">Salvar</button>